{
  "name": "非法 image_key 测试",
  "description": "使用未上传或伪造的 image_key 发送图片消息，验证接口返回资源未找到错误",
  "category": "negative",
  "request": {
    "method": "POST",
    "endpoint": "/open-apis/im/v1/messages",
    "query_params": {
      "receive_id_type": "open_id"
    },
    "headers": {
      "Content-Type": "application/json",
      "Authorization": "Bearer $access_token$"
    },
    "body": {
      "receive_id": "$open_id$",
      "msg_type": "image",
      "content": {
        "__needs_json_encode": true,
        "image_key": "fake_or_nonexistent_image_key_1234567890"
      },
      "uuid": "$random_uuid$"
    }
  },
  "expected": {
    "status_code": 400,
    "headers": {
      "Content-Type": "application/json"
    },
    "body": {
      "code": {
        "@not_equal": 0
      },
      "msg": {
          "@not_empty": true
        }
    }
  },
  "setup": [
    {
      "action": "get_tenant_access_token",
      "save_to": "access_token"
    },
    {
      "action": "get_open_id",
      "save_to": "open_id"
    },
    {
      "action": "generate_uuid",
      "save_to": "random_uuid"
    }
  ]
}
