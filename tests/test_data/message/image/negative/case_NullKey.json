{
  "name": "image_key 为空字符串测试",
  "description": "发送图片消息时，image_key 为空字符串，验证接口参数不能为空校验",
  "category": "negative",
  "request": {
    "method": "POST",
    "endpoint": "/open-apis/im/v1/messages",
    "query_params": { "receive_id_type": "open_id" },
    "headers": {
      "Content-Type": "application/json",
      "Authorization": "Bearer $access_token$"
    },
    "body": {
      "receive_id": "$open_id$",
      "msg_type": "image",
      "content": {
        "__needs_json_encode": true,
        "image_key": ""
      },
      "uuid": "$random_uuid$"
    }
  },
  "expected": {
    "status_code": 400,
    "body": {
      "code": {
        "@not_equal": 0
      },
      "msg": {
          "@not_empty": true
        }
    }
  },
  "setup": [
    { "action": "get_tenant_access_token", "save_to": "access_token" },
    { "action": "get_open_id", "save_to": "open_id" },
    { "action": "generate_uuid", "save_to": "random_uuid" }
  ]
}
