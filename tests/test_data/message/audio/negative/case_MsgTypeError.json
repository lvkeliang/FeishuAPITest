{
  "name": "错误的 msg_type",
  "description": "将 msg_type 错误设置为 text，实际上传音频内容",
  "category": "negative",
  "request": {
    "method": "POST",
    "endpoint": "/open-apis/im/v1/messages",
    "query_params": {
      "receive_id_type": "open_id"
    },
    "headers": {
      "Content-Type": "application/json",
      "Authorization": "Bearer $access_token$"
    },
    "body": {
      "receive_id": "$open_id$",
      "msg_type": "text",
      "content": {
        "__needs_json_encode": true,
        "file_key": "$uploaded_file_key$"
      },
      "uuid": "$random_uuid$"
    }
  },
  "expected": {
    "status_code": 400,
    "body": {
      "code": {
        "@not_equal": 0
      },
      "msg": {
          "@not_empty": true
        }
    } 
  },
  "setup": [
    {
      "action": "get_tenant_access_token",
      "save_to": "access_token"
    },
    {
      "action": "get_open_id",
      "save_to": "open_id"
    },
    {
      "action": "generate_uuid",
      "save_to": "random_uuid"
    },
    {
      "action": "upload_file",
      "save_to": "uploaded_file_key",
      "file_path": "tests/test_data/message/audio/audio/sample.opus",
      "file_type": "opus"
    }
  ]
}
