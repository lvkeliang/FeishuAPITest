{
  "name": "媒体消息测试-非法media_key",
  "description": "测试使用伪造或未上传的 media_key，接口应返回资源未找到错误",
  "category": "negative",
  "request": {
    "method": "POST",
    "endpoint": "/open-apis/im/v1/messages",
    "query_params": {
      "receive_id_type": "open_id"
    },
    "headers": {
      "Content-Type": "application/json",
      "Authorization": "Bearer $access_token$"
    },
    "body": {
      "receive_id": "$open_id$",
      "msg_type": "media",
      "content": {
        "__needs_json_encode": true,
        "file_key": "invalid_fake_media_key_12345",
        "image_key": "$uploaded_cover_image_key$"
      },
      "uuid": "$random_uuid$"
    }
  },
  "expected": {
    "status_code": 400,
    "headers": {
      "Content-Type": "application/json"
    },
"body": {
      "code": {
        "@not_equal": 0
      },
      "msg": {
          "@not_empty": true
        }
    }
  },
  "setup": [
    {
      "action": "get_tenant_access_token",
      "save_to": "access_token"
    },
    {
      "action": "get_open_id",
      "save_to": "open_id"
    },
    {
      "action": "generate_uuid",
      "save_to": "random_uuid"
    },
    {
      "action": "upload_image",
      "save_to": "uploaded_cover_image_key",
      "image_path": "tests/test_data/message/media/media/cover1.jpg",
      "image_type": "message"
    }
  ]
}
