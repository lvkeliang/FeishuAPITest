{
  "name": "边界测试 - 最小尺寸图片发送",
  "description": "测试发送最小尺寸图片（如1x1），验证接口是否允许极小尺寸图像",
  "category": "positive",
  "request": {
    "method": "POST",
    "endpoint": "/open-apis/im/v1/messages",
    "query_params": {
      "receive_id_type": "open_id"
    },
    "headers": {
      "Content-Type": "application/json",
      "Authorization": "Bearer $access_token$"
    },
    "body": {
      "receive_id": "$open_id$",
      "msg_type": "image",
      "content": {
        "__needs_json_encode": true,
        "image_key": "$uploaded_image_key$"
      },
      "uuid": "$random_uuid$"
    }
  },
  "expected": {
    "status_code": 200,
    "headers": {
      "Content-Type": "application/json"
    },
    "schema": "message_response_schema",
    "body": {
      "code": 0,
      "msg": "success",
      "data": {
        "msg_type": "image",
        "deleted": false,
        "updated": false,
        "sender.id_type": "app_id",
        "body.content": {
          "@contains": "image_key"
        }
      }
    }
  },
  "setup": [
    {
      "action": "get_tenant_access_token",
      "save_to": "access_token"
    },
    {
      "action": "get_open_id",
      "save_to": "open_id"
    },
    {
      "action": "generate_uuid",
      "save_to": "random_uuid"
    },
    {
      "action": "upload_image",
      "save_to": "uploaded_image_key",
      "image_path": "tests/test_data/message/image/image/1x1.png",
      "image_type": "message"
    }
  ],
  "teardown": [
    {
      "action": "delete_message",
      "params": {
        "message_id": "$response.data.message_id$"
      }
    }
  ]
}
